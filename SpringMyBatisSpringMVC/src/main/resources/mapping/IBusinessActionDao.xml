        <select id="queryActivePickTask" resultType="java.lang.Integer">
            SELECT count(1)
              from qt_bucket b,
                   qt_slot s,
                   qt_pick_task t
             where b.bucket_code = s.bucket_code
               and b.bucket_code = t.bucket_code
               and s.slot_code = #{_slotCode,mode=IN,jdbcType=VARCHAR}
               and t.task_status >=0
               and t.task_status <![CDATA[ < ]]> 99
               limit 1;
        </select>
